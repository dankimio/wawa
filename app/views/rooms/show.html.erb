<div class="grid grid-cols-12 gap-x-8">
  <div class="col-span-2 md:col-span-4 lg:col-span-3">
    <%= render "shared/rooms" %>
  </div>

  <div class="col-span-10 md:col-span-8 lg:col-span-9">
    <%= turbo_frame_tag "content" do %>
      <div class="mb-6 rounded-md border-2 border-neutral-100 flex justify-between items-center px-4 py-3">
        <p class="text-neutral-800">
          You're viewing
          <span class="font-semibold">
            #general.
          </span>
        </p>

        <% if @room.users.include?(Current.user) %>
          <%= button_to "Leave room",
            leave_room_path(@room),
            data: { turbo_frame: "content" }, method: :delete,
            class: "button button-red button-small" %>
        <% else %>
          <%= button_to "Join room",
            join_room_path(@room),
            data: { turbo_frame: "content" },
            class: "button button-blue button-small" %>
        <% end %>
      </div>

      <div class="mb-6">
        <%= form_with model: [@room, Message.new], data: { turbo_frame: "content" } do |form| %>
          <div class="flex gap-x-3">
            <%= form.text_field :body, class: "flex-1", placeholder: "Write a message..." %>
            <%= form.submit "Send", class: "button button-blue" %>
          </div>
        <% end %>
      </div>

      <div class="space-y-2.5">
        <% 99.times do |i| %>
          <div class="flex gap-x-3">
            <div class="bg-neutral-200 rounded w-10 h-10">
            </div>

            <div>
              <div class="space-x-0.5 text-sm">
                <span class="font-medium">Name</span>
                <span class="text-neutral-400">9:41 AM</span>
              </div>
              <p>
                Lorem ipsum dolor sit amet consectetur adipisicing elit.
              </p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
