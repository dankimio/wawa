<h1 class="h1 mb-4">Sign up</h1>

<%= form_with model: @user do |form| %>
  <div class="mb-4 space-y-2">
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field :email, required: true, autofocus: "true", class: "w-full md:w-auto" %>
  </div>

  <div class="mb-4 space-y-2">
    <%= form.label :password, class: "form-label" %>
    <%= form.password_field :password, required: true, minlength: 8, autocomplete: "new-password", class: "w-full md:w-auto" %>
  </div>

  <div class="mb-4 space-y-2">
    <%= form.label :password_confirmation, class: "form-label" %>
    <%= form.password_field :password_confirmation, required: true, minlength: 8, autocomplete: "new-password", class: "w-full md:w-auto" %>
  </div>

  <div class="mb-4 space-y-2">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, required: true, autocorrect: "off", class: "w-full md:w-auto" %>
  </div>

  <%= form.submit "Sign up", class: "mt-2 button button-large button-blue w-full md:w-auto" %>
<% end %>
