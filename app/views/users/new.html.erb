<h1 class="h1 mb-4">Sign up</h1>

<%= form_with model: @user do |f| %>
  <div class="mb-4 space-y-2">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, required: true, class: "w-full md:w-auto" %>
  </div>

  <div class="mb-4 space-y-2">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, required: true, class: "w-full md:w-auto" %>
  </div>

  <div class="mb-4 space-y-2">
    <%= f.label :password_confirmation, class: "form-label" %>
    <%= f.password_field :password_confirmation, required: true, class: "w-full md:w-auto" %>
  </div>

  <div class="mb-4 space-y-2">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "w-full md:w-auto" %>
  </div>

  <%= f.submit "Sign up", class: "button button-large button-blue w-full md:w-auto" %>
<% end %>
